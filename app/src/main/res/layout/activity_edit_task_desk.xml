<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    tools:context=".MainActivity"
    android:background="#F4F4F4"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="198dp">
        <TextView
            android:id="@+id/titlepage"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="28dp"
            android:text="Edit task"
            android:textColor="#FFF"
            android:textAlignment="center"
            android:textSize="26sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />
        <View
            android:layout_marginTop="20dp"
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="-40dp"
        android:orientation="vertical"
        android:background="@drawable/bgitemtodo"
        android:paddingBottom="22dp"
        android:paddingTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="16dp"
            android:id="@+id/addtitle"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Add Title"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="8dp"
            android:id="@+id/titletodo"
            android:inputType="text"
            android:background="@drawable/bginputtask"
            android:textColorHint="#B5B5B5"
            android:textColor="@color/colorPrimaryDark"
            android:hint="Add a title for your task"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="-20dp"
        android:orientation="vertical"
        android:background="@drawable/bgitemtodo"
        android:paddingBottom="22dp"
        android:paddingTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="16dp"
            android:id="@+id/adddesc"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Description"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="8dp"
            android:id="@+id/desctodo"
            android:maxLength="25"
            android:inputType="text"
            android:background="@drawable/bginputtask"
            android:textColorHint="#B5B5B5"
            android:textColor="@color/colorPrimaryDark"
            android:hint="Add a description for your task"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="-20dp"
        android:orientation="vertical"
        android:background="@drawable/bgitemtodo"
        android:paddingBottom="22dp"
        android:paddingTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="16dp"
            android:id="@+id/adddate"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Date"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="8dp"
            android:id="@+id/datetodo"
            android:maxLength="10"
            android:inputType="text"
            android:background="@drawable/bginputtask"
            android:textColorHint="#B5B5B5"
            android:textColor="@color/colorPrimaryDark"
            android:hint="Add a date for your task"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnSaveUpdate"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:text="Save Update"
        android:background="@drawable/bgbtncreate"
        android:textColor="#FFF"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>

    <Button
        android:id="@+id/btnDelete"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Delete"
        android:background="@drawable/bgbtndelete"
        android:textColor="#FFF"
        android:textAllCaps="false"
        android:textSize="22sp"

        android:layout_width="match_parent"
        android:layout_height="55dp"/>

</LinearLayout>
